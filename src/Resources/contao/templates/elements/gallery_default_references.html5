
<ul class="cols_<?= $this->perRow ?> row references">
    <?php foreach ($this->body as $class => $row): ?>
        <?php foreach ($row as $col): ?>
            <?php if ($col->addImage): ?>
                <li class="<?= $class ?> <?= $col->class ?>">
                    <?php $this->insert('image_reference', (array) $col); ?>
                </li>
            <?php endif; ?>
        <?php endforeach; ?>
    <?php endforeach; ?>
</ul>
